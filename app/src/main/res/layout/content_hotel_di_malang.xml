<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="?android:attr/actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.amiril.fpmalangcityguide.hotelDiMalang"
        tools:showIn="@layout/activity_hotel_di_malang">


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_hotel_atria"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/foto_hotel_atria"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hotel_atria_2" />

                <TextView
                    android:id="@+id/title_hotel_atria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/foto_hotel_atria"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    android:text="Atria Hotel and Conference"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtitle_hotel_atria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_hotel_atria"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="A Big, Stylish and Modern Hotel"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_below="@+id/subtitle_hotel_atria"
                    android:onClick="displayDetailHotelAtria"
                    android:text="View Details"
                    android:textColor="#FFFFFF" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_tahucampur"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/foto_hotel_harris"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hotel_harris_2" />

                <TextView
                    android:id="@+id/title_hotel_harris"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/foto_hotel_harris"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    android:text="HARRIS Hotel and Convention"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtitle_hotel_haris"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_hotel_harris"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="A Simple, Modern yet Effective Hotel"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_below="@+id/subtitle_hotel_haris"
                    android:onClick="displayDetailHotelHaris"
                    android:text="View Details"
                    android:textColor="#FFFFFF" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_pecel"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/foto_hotel_kertanegara"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hotel_kertanegara_1" />

                <TextView
                    android:id="@+id/title_hotel_kertanegara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/foto_hotel_kertanegara"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    android:text="Kertanegara Premium Guest House"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtitle_hotel_kertanegara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_hotel_kertanegara"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="Premium Intimate Guest House"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_below="@+id/subtitle_hotel_kertanegara"
                    android:onClick="displayDetailHotelKertanegara"
                    android:text="View Details"
                    android:textColor="#FFFFFF" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_tahutelor"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/foto_hotel_tugu"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hotel_tugu_3" />

                <TextView
                    android:id="@+id/title_hotel_tugu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/foto_hotel_tugu"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    android:text="Hotel Tugu"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtitle_hotel_tugu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_hotel_tugu"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="The Legendary Hotel"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_below="@+id/subtitle_hotel_tugu"
                    android:onClick="displayDetailHotelTugu"
                    android:text="View Details"
                    android:textColor="#FFFFFF" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>


